{
    "name": "eslint-config-ironplate",
    "version": "2.0.0",
    "description": "Shareable ESLint configuration",
    "engines": {
        "node": ">=20"
    },
    "type": "module",
    "main": "index.js",
    "scripts": {
        "lint": "eslint . --report-unused-disable-directives",
        "postinstall": "./scripts/postinstall.sh",
        "postversion": "git push --follow-tags",
        "test": "npm run lint && pwd && npm run --prefix ./test/js test"
    },
    "peerDependencies": {
        "@eslint-react/eslint-plugin": "*",
        "@eslint/js": "*",
        "@stylistic/eslint-plugin": "*",
        "@typescript-eslint/eslint-plugin": "*",
        "@typescript-eslint/parser": "*",
        "eslint": "*",
        "eslint-plugin-import": "*",
        "eslint-plugin-jsx-a11y": "*",
        "eslint-plugin-n": "*",
        "eslint-plugin-promise": "*",
        "eslint-plugin-react": "*",
        "eslint-plugin-react-hooks": "*",
        "eslint-plugin-react-refresh": "*",
        "eslint-plugin-unicorn": "*",
        "globals": "*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/webextensions/eslint-config-ironplate.git"
    },
    "keywords": [
        "eslint",
        "eslintconfig"
    ],
    "author": "Priyank Parashar",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/webextensions/eslint-config-ironplate/issues"
    },
    "homepage": "https://github.com/webextensions/eslint-config-ironplate#readme"
}
